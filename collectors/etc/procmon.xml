<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
  <processes>
<!-- List all the processes to monitor -->
<process>
        <cmdline>.*org.apache.hadoop.hdfs.server.namenode.NameNode.*</cmdline>
        <displayname>NameNode</displayname>
    </process>

<process>
        <cmdline>.*org.apache.hadoop.yarn.server.resourcemanager.ResourceManager.*</cmdline>
        <displayname>ResourceManager</displayname>
    </process>


  </processes>
  <hosts>
    <hostname>localhost</hostname>
  </hosts>
</configuration>
